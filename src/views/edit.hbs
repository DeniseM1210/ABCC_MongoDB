<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h1>Actualizar Alumnno</h1>

          <form action="/alumno/{{alumno._id}}/edit" method="post">
            <div class="mb-3">
              <input
                class="form-control"
                type="text"
                name="numControl"
                placeholder="Numero de Control"
                value="{{alumno.num_control}}"
              />
            </div>
            <div class="mb-3">
              <input
                class="form-control"
                type="text"
                name="nombre"
                placeholder="Nombre"
                value="{{alumno.nombre}}"
              />
            </div>
            <button class="btn btn-primary" type="submit">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>